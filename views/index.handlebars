<div class="container">
  <div class="row">
        
		<h1 id="title">Burger Menu</h1>

	</div>

	<div class="row">
		<div class="col-md-5 col-md-offset-1">

			<div class="uneaten">
				<h2>Add your burger!</h2>
				<ol>
					{{#each burgers}}
						{{#unless devoured}}
							<li>
						
							{{burger_name}}

							<button class="btn btn-primary eat-button" id="eat-burger" data-id="{{id}}" >
								Eat burger 
							</button>

							</li>
						
						{{/unless}}
					{{/each}}
				</ol>
			</div>
    </div>

		<div class="col-md-5">
    	<div class="eaten">
        <h2>Burgers eaten</h2>
				<ol>        
					{{#each burgers}}
						{{#if devoured}}
							<li>
							{{burger_name}}
							</li>
						{{/if}}
					{{/each}}
        <ol>
        
    	</div>
    </div>
  </div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
    <div class="add-new">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger name:</label>
          <input type="text" id="bu" name="name">
        </div>

        <button class="btn btn-primary" id="submit-button" type="submit">Add your own!</button>
      </form>
    </div>
  </div>

	</div>

</div> 